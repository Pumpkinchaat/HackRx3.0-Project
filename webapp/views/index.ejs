<%- include("header"); -%>

<div class="row">
  <div class="col-lg-6 hospitalList">
    <div class="Top_text d-flex justify-content-between">
      <p style="color: white">Hospitals near you</p>
      <!-- <button
        type="button"
        class="btn btn-outline-light btn-sm"
        data-toggle="modal"
        data-target="#exampleModal"
        data-whatever="Create Institution"
      >
        Create institution
      </button> -->
    </div>
    <section class="cards">
      <% let counter = 0; %> 
      <% for (let i = counter ; i < institutions.length ; i++) { %>
      <div class="card">
        <div class="card-body">
          <a href=<%= `/${institutions[i]._id}` %>>
            <h3><%= institutions[i].name %></h3>
          </a>
          <div class="d-flex justify-content-between">
            <p>address: <%= institutions[i].address %></p>
            <p>Rating: <%= finalRatings[i] %></p>
          </div>
        </div>
      </div>
      <% } %>
    </section>
    <!-- <button type="button" class="btn btn-outline-light btn-sm" id="next">
      next
    </button> -->
  </div>
  <div class="col-lg-6 maps">
    <p></p>
    <div id="map"></div>
  </div>
</div>
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div style="border-bottom: none" class="modal-header">
        <!-- <h5 class="modal-title" id="exampleModalLabel">Create Institution</h5> -->
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Name</label>
            <input type="text" class="form-control" id="recipient-name" />
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label"
              >Address Line1</label
            >
            <textarea class="form-control" id="message-text"></textarea>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label"
              >Address Line2</label
            >
            <textarea class="form-control" id="message-text"></textarea>
          </div>
          <div class="form-group">
            <label for="recipient-City" class="col-form-label">City</label>
            <input type="text" class="form-control" id="city" />
          </div>
          <div class="form-group">
            <label for="recipient-Sate" class="col-form-label">State</label>
            <input type="text" class="form-control" id="state" />
          </div>
          <div class="form-group">
            <label for="recipient-Pincode" class="col-form-label"
              >Pincode</label
            >
            <input type="number" class="form-control" id="pincode" />
          </div>
          <div class="form-group">
            <label for="recipient-County" class="col-form-label">Country</label>
            <input type="text" class="form-control" id="country" />
          </div>
        </form>
      </div>
      <div
        style="border-top: none; justify-content: center"
        class="modal-footer"
      >
        <button type="button" class="btn btn-block Save_button">Save</button>
      </div>
    </div>
  </div>
</div>

<%- include("footer"); -%>
